{% extends 'base.html.twig'%}

{% block title %}{{ controller_name }}{% endblock %}

{% block body%}
<div class="container-fluid py-4">
    <main class="form-signin">
        <div class="row align-items-md-stretch">
            <div class="col-md-6">
                <h1 class="h3 mb-3 fw-normal">Connexion</h1>
                <form action="{{ path('connexion') }}" method="post">
                    <div class="row g-3">
                        <div class="form-floating">
                            <input type="email" class="form-control" id="floatingInput" name="_username" placeholder="name@example.com">
                            <label for="floatingInput">Email address</label>
                        </div>
                        <div class="form-floating">
                            <input type="password" class="form-control" id="floatingPassword" name="_password" placeholder="Password">
                            <label for="floatingPassword">Password</label>
                        </div>
                    </div>
                    <hr class="my-4">
                    <input type="hidden" name="_target_path" value="{{ path('connexionRedirection') }}"/>
                    <button class="btn btn-lg btn-primary" type="submit">Connexion</button>

                </form>
            </div>
            <div class="col-md-6">
                <h1 class="h3 mb-3 fw-normal">Inscription</h1>
                <form class="needs-validation">
                    <div class="row g-3">
                        <div class="form-floating col-md-6">
                            <input type="text" class="form-control" id="prenom" placeholder="Prénom" value="" required="">
                            <label for="prenom" class="form-label">Prénom</label>
                            <div class="invalid-feedback">
                                prénom est obligatoire.
                            </div>
                        </div>

                        <div class="form-floating col-md-6">
                            <input type="text" class="form-control" id="Nom" placeholder="Nom" value="" required="">
                            <label for="Nom" class="form-label">Nom</label>
                            <div class="invalid-feedback">
                                Nom est obligatoire.
                            </div>
                        </div>
                        <div class="form-floating">
                            <input type="email" class="form-control" id="email" placeholder="Email" value="" required="">
                            <label for="email">Email</label>
                            <div class="invalid-feedback">
                                Adresse mail est obligatoire.
                            </div>
                        </div>

                        <div class="form-floating">
                            <input type="password" class="form-control" id="floatingPassword" placeholder=">Mot de passe" value="" required="">
                            <label for="floatingPassword">Mot de passe</label>
                            <div class="invalid-feedback">
                                Nom est obligatoire.
                            </div>
                        </div>
                        <div class="form-floating">
                            <input type="password" class="form-control" id="floatingPassword" placeholder="Confirmer mot de passe" value="" required="">
                            <label for="floatingPassword">Confirmer mot de passe</label>
                            <div class="invalid-feedback">
                                Nom est obligatoire.
                            </div>
                        </div>
                    </div>
                    <hr class="my-4">
                    <button class="btn btn-primary btn-lg" type="submit">S'inscrire</button>
                </form>
            </div>
        </div>
    </main>
</div>
    {% endblock %}

