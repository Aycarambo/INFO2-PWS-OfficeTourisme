{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class="container col-md-6">
        <h1 class="h3 mb-3 fw-normal">Inscription</h1>
        <form name="registration_form" class="needs-validation" method="post">
            <div class="row g-3">
                <div class="form-floating col-md-6">
                    <input type="text" class="form-control" id="prenom" placeholder="Prénom" value="" required="" name="registration_form[prenom]">
                    <label for="prenom" class="form-label">Prénom</label>
                    <div class="invalid-feedback">
                        prénom est obligatoire.
                    </div>
                </div>

                <div class="form-floating col-md-6">
                    <input type="text" class="form-control" id="Nom" placeholder="Nom" value="" required="" name="registration_form[nom]">
                    <label for="Nom" class="form-label">Nom</label>
                    <div class="invalid-feedback">
                        Nom est obligatoire.
                    </div>
                </div>
                <div class="form-floating">
                    <input class ="form-control" type="text" id="registration_form_email" placeholder="registration_form_email" name="registration_form[email]" required="required" maxlength="180" />
                    <label for="registration_form_email">Email</label>
                    <div class="invalid-feedback">
                        Adresse mail est obligatoire.
                    </div>
                </div>
                <div class="form-floating">
                    <input class ="form-control" type="password" id="registration_form_plainPassword" placeholder="registration_form_password" name="registration_form[plainPassword]" required="required" autocomplete="new-password" />
                    <label for="registration_form_plainPassword">Mot de passe</label>
                    <div class="invalid-feedback">
                        MDP est obligatoire.
                    </div>
                </div>
            </div>
            <hr class="my-4">
            <button class="btn btn-primary btn-lg" type="submit">S'inscrire</button>
            {{ form_row(registrationForm._token) }}
        </form>
    </div>
{% endblock %}
