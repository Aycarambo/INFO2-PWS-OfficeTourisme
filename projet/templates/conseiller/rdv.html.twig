{% extends 'base.html.twig' %}

{% block title %}Mes rendez-vous{% endblock %}

{% block body %}

    <style>
        .example-wrapper
        {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }
        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
        .row-cols-auto
        {
            padding: 5px;
        }

    </style>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>

    <div class="dropdown">
        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
            Semaine X
        </button>
        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
            <li><a class="dropdown-item" href="#">Semaine X+1</a></li>
            <li><a class="dropdown-item" href="#">Semaine X+2</a></li>
            <li><a class="dropdown-item" href="#">Semaine X+3</a></li>
        </ul>
    </div>



    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }

        .span1 {
            padding: 120px 6px 40px 6px;
            margin-left: 20px;
            border-left: 3px solid;
            font-size: 8;
            position: relative;
            top: 40px;
        }

        .div2 {
            display: flex;
            flex-direction: row;
        }
    </style>

    <div class="example-wrapper">
        <center>
            <form class="row g-3 needs-validation" novalidate>
                <div class="div2">
                    <span class="span1"></span>
                    <div class="dropdown">
                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                            <li><a class="dropdown-item" href="#">Semaine X+1</a></li>
                            <li><a class="dropdown-item" href="#">Semaine X+2</a></li>
                            <li><a class="dropdown-item" href="#">Semaine X+3</a></li>
                        </ul>
                    </div>

                    <table class="table text-center">
                        <thead>
                        <tr>
                            <th>Horaire</th>
                            {% for jour in agenda|keys %}
                                <th>
                                    {{ jour }}
                                </th>
                            {% endfor %}
                        </tr>
                        </thead>
                        <tbody>
                        {% for heure in agenda.Lundi|keys %}
                            <tr>
                                <td>{{ heure }}</td>
                                {% for jour in agenda|keys %}
                                    <td>
                                    {%  if agenda[jour][heure] %}
                                        X
                                    {% endif %}
                                    </td>
                                {% endfor %}
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>









                </div>
            </form>
        </center>


    </div>


{% endblock %}