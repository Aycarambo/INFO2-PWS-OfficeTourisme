<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <nav class="navbar navbar-expand-lg navbar-light" style="background-color: #ebb0e5;">
            <div class="container-fluid">
                <a class="navbar-brand" href="/">Office de Tourisme</a>


                {% if is_granted('ROLE_TOURISTE') %}
                    <a class="btn btn-primary" href="/espaceTouriste" role="button">Espace Touriste</a>
                {% elseif is_granted('ROLE_CONSEILLER') %}
                    <a class="btn btn-primary" href="/espaceConseiller" role="button">Mon Espace</a>
                {% elseif is_granted('ROLE_RESPONSABLE') %}
                    <a class="btn btn-primary" href="/espaceResponsable" role="button">Mon Espace</a>
                {% endif %}

                {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                    <a class="btn btn-primary" href="/connexion" role="button">Connexion</a>
                {% else %}
                    <a class="btn btn-primary" href="{{ path('logout') }}" role="button">Déconnexion</a>
                {% endif %}
            </div>
        </nav>

    {% block body %}{% endblock %}
    </body>
</html>
