{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <script>
        function notConnected(){
                alert('Connectez-vous pour continuer !')
                window.location.href="/connexion";
        }
        function Connected(){
            window.location.href="/espaceTouriste/demandeRDV";
        }
    </script>
    <div class="container-fluid py-4 bg-light">
        <div class="mb-4 rounded-3">
            <div class="container-fluid py-5">
                <div class="position-absolute start-50 translate-middle">
                    {% if not is_granted('IS_AUTHENTICATED_FULLY') %}
                        <h1 class="display-5 fw-bold">Ile de Ré<a class="btn btn-primary" style="position: relative; left: 150px" onclick="notConnected()">Prendre RDV</a></h1>
                    {% endif %}
                    {% if is_granted('ROLE_TOURISTE') %}
                        <h1 class="display-5 fw-bold">Ile de Ré<a class="btn btn-primary" style="position: relative; left: 150px" href="/espaceTouriste/demandeRDV">Prendre RDV</a></h1>
                    {% elseif is_granted('ROLE_CONSEILLER') %}
                        <h1 class="display-5 fw-bold">Ile de Ré<a class="btn btn-primary" style="position: relative; left: 150px" href="/espaceConseiller">Gérer RDV</a></h1>
                    {% elseif is_granted('ROLE_RESPONSABLE') %}
                         <h1 class="display-5 fw-bold">Ile de Ré</h1>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
    <div class="container-fluid py-4">
        <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-indicators">
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
                <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
            </div>
            <div class="carousel-inner">
                <div class="carousel-item active">
                    <img src="images/1.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="images/2.jpg" class="d-block w-100" alt="...">
                </div>
                <div class="carousel-item">
                    <img src="images/3.jpg" class="d-block w-100" alt="...">
                </div>
            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>
    </div>
{% endblock %}
