{% extends 'base.html.twig' %}

{% block title %}Mes Rendez-vous{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        .containerLGrey { background-color: lightgrey; padding: 1%; }
        .containerGrey { background-color: grey; padding: 1%; margin: 1%; border-radius: 10px; display:flex; flex-flow: row nowrap; justify-content: space-between; }
        li { list-style: none; }
    </style>

    <div class="example-wrapper">
        <h1>Mes Rendez-vous</h1>
        <div class="containerLGrey">
            <ul>
                {% for rdv in listeRDV %}
                    <li>
                        <div class="containerGrey" >
                            <p>{{ rdv.horaire|format_datetime('full') }}</p> <p>{{ rdv.Conseiller.nom }} {{ rdv.Conseiller.prenom }}</p>
                            <button type="button" class="btn btn-primary">Modifier</button>
                        </div>
                    </li>
                {% endfor %}
            </ul>
        </div>
    </div>
{% endblock %}
